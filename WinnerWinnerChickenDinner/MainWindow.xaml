<Window x:Class="WinnerWinnerChickenDinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:WinnerWinnerChickenDinner"
        mc:Ignorable="d"
        Title="Winner Winner Chicken Dinner!" Height="450" Width="800"
        ResizeMode="NoResize" Loaded="OpenInitialSettings" Closing="KillApp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Image gif:ImageBehavior.AnimatedSource="D:\MSILaptop\work\United-Way\WinnerWinnerChickenDinner\Assets\slotmachine.gif"
                           gif:ImageBehavior.AutoStart ="True"
                           gif:ImageBehavior.RepeatBehavior="1"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <Button Style="{StaticResource RoundButtonTemplate}" Content="ROLL" Margin="0,315,390,-99" FontWeight="ExtraBold" FontFamily="Calibri" Click="Button_Click" HorizontalAlignment="Right" Width="122" />
        <!--<Button Style="{StaticResource RoundButtonTemplate}" Content="NEW PRIZE" Margin="0,316,263,-99" FontWeight="ExtraBold" FontFamily="Calibri" HorizontalAlignment="Right" Width="122" Click="Button_Click_1"/>-->
        <ListView Background= "Transparent"  FontWeight="Bold" FontSize="15" Foreground="DarkGoldenrod" FontFamily="Calibri" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="lst_PrizeBoard" SelectionChanged="lst_PrizeBoard_SelectionChanged" Margin="0,48,0,-1" HorizontalAlignment="Right" Width="300">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource HeaderStyle}">
                    <GridViewColumn  DisplayMemberBinding="{Binding PrizeName}" Header="PRIZE" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Winner}" Header="WINNER" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Foreground="DarkSlateGray" Name="txt_CurrentPrize" Margin="0,330,118,-96" TextWrapping="Wrap" Text="Select Prize" HorizontalAlignment="Right" Width="140"/>


        <TextBlock Foreground="DarkSlateGray" FontSize="20" Margin="0,291,66,-64" TextWrapping="Wrap" FontFamily="Calibri" Text="Current Prize:" HorizontalAlignment="Right" Width="192"/>
        <TextBlock FontWeight="ExtraBold" FontSize="35"  Foreground="DarkSlateGray" Name="txt_WheelName" Height="46" Margin="282,264,263,-48" TextWrapping="Wrap" HorizontalAlignment="Right" Text="" Width="249" TextAlignment="Center"/>
        <TextBlock FontFamily="Brush Script MT" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" Text="United Way Campaign" VerticalAlignment="Top" Height="172" Width="186" FontSize="40" Foreground="HotPink">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="1"
                    Direction="-25"
                    Color="HotPink"
                    Opacity="0.5"
                    BlurRadius="20"
                    
                />
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="settingsBtn"
                HorizontalAlignment="Left"
                Margin="741,10,0,0"
                VerticalAlignment="Top"
                Height="33" Width="34"
                BorderThickness="0"   
                Click="BtnOpenSettings">
            <Image Source="D:\MSILaptop\work\United-Way\WinnerWinnerChickenDinner/Assets/settings.png"  />
        </Button>

    </Grid>
</Window>
