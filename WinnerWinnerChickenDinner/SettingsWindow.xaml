<Window x:Class="WinnerWinnerChickenDinner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinnerWinnerChickenDinner"
        mc:Ignorable="d"
        Title="Settings"
        Loaded="GoFullscreen"
        Height="450" 
        Width="767"
        Closing="OnClosing" ScrollViewer.HorizontalScrollBarVisibility="Auto">

    <Grid Margin="0,0,0,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- <RowDefinition Height="26*"/>-->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="217*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="458*"/>
            <ColumnDefinition Width="86*"/>
        </Grid.ColumnDefinitions>

        <ListView  FontWeight="Bold" FontSize="15" BorderBrush =" Gray" Foreground="LightSkyBlue" FontFamily="Arial" BorderThickness="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="prizeBoard" Margin="31,35,24,102" Grid.Row="1">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource HeaderStyle}">
                    <GridViewColumn DisplayMemberBinding="{Binding PrizeName}" Header="PRIZES" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddPrizeBtn" Content="ADD" Foreground="White" FontWeight="Bold" Background="LightSkyBlue" Margin="31,186,110,79" Click="AddPrize" Grid.Row="1"/>
        <Button x:Name="deleteBtn" Content="REMOVE" Click="deleteBtn_Click" Foreground="White" FontWeight="Bold" Background="LightSkyBlue" Margin="118,186,25,79" Grid.Row="1"/>

        <Button x:Name="saveBtn" Content="SAVE AND CONTINUE" Foreground="White" Background="Red" FontSize="15" BorderThickness ="1.5" FontWeight="Bold" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="32,209,0,0" VerticalAlignment="Top" Width="160" Click="Save" Height="28" Grid.Row="1"/>
        <Button x:Name="btnUploadFile" Content="UPLOAD" Foreground="White" FontWeight="Bold" Background="LightSkyBlue" HorizontalAlignment="Left" Margin="441,105,0,0" VerticalAlignment="Top" Width="67" Click="btnUploadFile_Click"  Height="23" Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="filePathBox" HorizontalAlignment="Left" Height="23" Margin="4,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="437" IsEnabled="false" Grid.Column="2" BorderBrush="Black"/>
        <Label x:Name="contestantsListLabel" Content="Current Contestants in the Raffle" HorizontalContentAlignment="Center" Foreground="DimGray" FontSize="18" FontWeight="Bold" FontFamily="Arial" HorizontalAlignment="Left" Height="36" Margin="4,1,0,0" VerticalAlignment="Top" Width="534" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="contestName" HorizontalAlignment="Left" Height="23" Margin="31,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="161" FontWeight="Bold" BorderBrush=" Gray" Foreground="Red"/>
        <Label Content="Contest Name"  HorizontalAlignment="Left" Margin="31,80,0,0" VerticalAlignment="Top" Foreground="DimGray"  FontWeight="Bold" HorizontalContentAlignment="Center" Width="161" Height="24"/>
        <CheckBox x:Name="AllowMultipleWins" Content="Allow Multiple Wins" Foreground="DimGray"  FontWeight="Bold" HorizontalAlignment="Left" Margin="31,8,0,0" VerticalAlignment="Top" Width="161" Checked="CheckBox_Checked" Height="15" Grid.Row="1"/>
        <Label x:Name="errorMessage2" Foreground="Red" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="159,237,0,0" VerticalAlignment="Top" Height="28" Width="369"  FontWeight="Bold" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label x:Name="errorMessage1"  HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,237,0,0" VerticalAlignment="Top" Height="28" Width="382"  FontWeight="Bold" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Rectangle Fill="DimGray" Margin="212,50,0,62" Grid.ColumnSpan="4"/>
        <Button x:Name="infoBtn"
                Height="40" Width="40"
                Background="Transparent"
                BorderThickness="0"   
                Click="BtnInfo" RenderTransformOrigin="-0.794,0.527" Grid.Column="2" Margin="457,63,47,78" Grid.ColumnSpan="2">
            <Image Source="Assets/info.png" RenderTransformOrigin="-1,5.613" Height="37" Width="34"  />
        </Button>
        <Label x:Name="contestTitle"  Content="New Contest" HorizontalContentAlignment="Center" Margin="41,62,28,73" Width="389" FontFamily="Arial" FontWeight="Bold" Foreground="White" FontSize="31" Height="46" Grid.Column="2" VerticalContentAlignment="Center"/>
        <Image Source="Assets/logo1.png" Margin="0,50,5,62"/>
        <Rectangle Fill="Red" HorizontalAlignment="Left" Height="6" Margin="31,270,0,0" Stroke="Red" VerticalAlignment="Top" Width="700" Grid.ColumnSpan="4" Grid.Row="1"/>
        <ListView x:Name="contestantsListView" HorizontalAlignment="Left" Height="202" Margin="4,35,0,0" VerticalAlignment="Top" Width="504" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tickets" DisplayMemberBinding="{Binding Tickets}"/>
                    <GridViewColumn Header="Prefix" DisplayMemberBinding="{Binding Prefix}"/>
                    <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Middle Name" DisplayMemberBinding="{Binding MiddleName}"/>
                    <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Phone Number" DisplayMemberBinding="{Binding PhoneNumber}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
