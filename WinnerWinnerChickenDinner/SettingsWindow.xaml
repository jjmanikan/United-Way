<Window x:Class="WinnerWinnerChickenDinner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinnerWinnerChickenDinner"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="523*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>

        <ListView Background= "Transparent" IsEnabled="False" FontWeight="Bold" FontSize="15" Foreground="DarkGoldenrod" FontFamily="Calibri" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="prizeBoard" Margin="0,10,10,139" HorizontalAlignment="Right" Width="150" Grid.Column="1">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource HeaderStyle}">
                    <GridViewColumn  DisplayMemberBinding="{Binding PrizeName}" Header="PRIZES" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Add Prize" HorizontalAlignment="Left" Margin="141.5,285,0,0" VerticalAlignment="Top" Width="93" Click="AddPrizeBtn" Grid.Column="1"/>
        <Button Content="SavePrizes" HorizontalAlignment="Left" Margin="141.5,310,0,0" VerticalAlignment="Top" Width="93" Click="savePrizesBtn" Grid.Column="1"/>

    </Grid>
</Window>
